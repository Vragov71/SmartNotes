@model WebApplication1.Models.Note

@{
    ViewData["Title"] = "Детайли за бележка";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow details-fadein bg-dark text-light">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title h3 mb-0" style="font-size:2.2rem;">@Model.Title</h2>
                </div>
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    <div class="px-3 pt-2">
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-secondary me-1">@tag.Name</span>
                        }
                    </div>
                }
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="card-img-top p-3 d-flex gap-2 flex-wrap justify-content-start">
                        @foreach (var image in Model.Images)
                        {
                            <img src="/images/@image.ImageUrl" alt="Note Image" class="img-thumbnail" style="width: 120px; height: 120px; object-fit: cover;">
                        }
                    </div>
                }
                <div class="card-body">
                    <p class="card-text">@Model.Content</p>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="far fa-clock"></i> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </small>
                    </p>
                </div>
                @if (Model.Files != null && Model.Files.Any())
                {
                    <div class="px-3 pt-2">
                        <h5>Прикачени файлове:</h5>
                        <ul class="list-group mb-3">
                            @foreach (var file in Model.Files)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@file.OriginalName</span>
                                    <a href="/Note/DownloadFile?fileName=@file.FileName" class="btn btn-success btn-sm" style="min-width: 90px;">
                                        <i class="fas fa-download"></i> Изтегли
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                <div class="card-footer bg-transparent border-top-0 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Редактирай
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Изтрий
                    </a>
                    <a asp-action="Index" class="btn btn-secondary ms-auto">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
        }
        .card-img-top {
            background-color: #23272b;
        }
        .img-thumbnail {
            background-color: #495057;
            border-color: #6c757d;
        }
        [data-bs-theme="dark"] .card, .bg-dark {
            background-color: #23272b !important;
            color: #f8f9fa;
        }
        .card-title {
            font-size: 2.2rem;
        }
        .card-img-top img {
            width: 120px !important;
            height: 120px !important;
        }
    </style>
}